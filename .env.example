# GovWatcher Environment Variables

# Database credentials
DB_ROOT_PASSWORD=change_me_postgres_root
API_DB_PASSWORD=change_me_api_user
ARCHIVE_DB_PASSWORD=change_me_archive_admin
READONLY_DB_PASSWORD=change_me_readonly

# Redis configuration
REDIS_PASSWORD=change_me_redis

# API configuration
NODE_ENV=production
API_PORT=3000

# Archive system configuration
ARCHIVE_CONCURRENCY=3
ARCHIVE_PRIORITY_THRESHOLD=5
MAX_CRAWL_DEPTH=3
CRAWLER_USER_AGENT=GovWatcher/1.0 (+https://govwatcher.org/bot; bot@govwatcher.org)
ENABLE_SCREENSHOTS=true
ENABLE_PDF=true
ENABLE_TEXT_EXTRACTION=true
ENABLE_VISUAL_DIFF=true

# Webhook settings
WEBHOOK_SECRET=change_me_webhook_secret

# Copy this file to .env and replace all 'change_me_*' values with secure passwords 